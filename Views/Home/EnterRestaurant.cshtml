@{
    ViewBag.title = "Enter a Restaurant";
}

@model Assignment_4_IS413.Models.RestaurantResponse
    <! -- The form created for the user to enter a restaurant-->
    <form asp-action="EnterRestaurant" method="post">
        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" />
        </div>

        <div>
            <label asp-for="RestName">Restaurant Name</label>
            <input asp-for="RestName" />
        </div>

        <div>
            <label asp-for="FavoriteDish">Favorite Dish</label>
            <input asp-for="FavoriteDish" />
        </div>

        <div>
            <label asp-for="RestaurantPhoneNumber">Restaurant Phone Number</label>
            <input asp-for="RestaurantPhoneNumber" />
        </div>

        <! -- shows the errors -->

        <div asp-validation-summary="All"></div>

        <button type="submit">Submit your Restaurant Information</button>

    </form>
